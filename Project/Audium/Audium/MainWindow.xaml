<Window x:Class="Audium.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audium"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" MinWidth="520" >
    <Window.Resources>
        <SolidColorBrush Color="Black" x:Key="DisqueBgColor"/>
        <Size Height="300" Width="300" x:Key="Taillepardefaut"/>
    </Window.Resources>

    <DockPanel>
        <StackPanel Background="#6FA8DC" DockPanel.Dock="Left" Width="300">
            <StackPanel Height="150">
                <TextBlock>AUDIUM</TextBlock>
            </StackPanel>
            <materialDesign:Card Padding="75" Margin="16">
                <Button Style="{DynamicResource MaterialDesignFloatingActionLightButton}" Height="50" Width="50" Content="Clique" Cursor="Hand"/>
            </materialDesign:Card>

            <materialDesign:Card Padding="75" Margin="16">
                <Button Style="{DynamicResource MaterialDesignFloatingActionLightButton}" Height="50" Width="50" Content="Clique" Cursor="Hand"/>
            </materialDesign:Card>



        </StackPanel>
        <Grid DockPanel.Dock="Top" Background="#9FC5F8" >
            <Grid.Resources>
                <Style TargetType="Ellipse">
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Width" Value="60"/>
                    <Setter Property="Margin" Value="8"/>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Margin" Value="5"/>
                </Style>
                    
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="1*"/>
                <ColumnDefinition  Width="1*"/>
                <ColumnDefinition  Width="1*"/>
                <ColumnDefinition  Width="3*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <Button Style="{DynamicResource MaterialDesignFloatingActionLightButton}" Height="60" Width="60" Margin="5,5"  Background="#6FA8DC" BorderBrush="Black" Cursor="Hand">
