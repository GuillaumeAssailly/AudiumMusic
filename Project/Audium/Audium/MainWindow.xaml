        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audium"
        mc:Ignorable="d"
        Title="Audium" Height="900" Width="1600" MinWidth="1220" MinHeight="550" WindowState="Maximized">
    <Window.Resources>
        <SolidColorBrush Color="Black" x:Key="DisqueBgColor"/>
        <Size Height="300" Width="300" x:Key="Taillepardefaut"/>
    </Window.Resources>

    <DockPanel>
        <Border  BorderBrush="Black" BorderThickness="1"  Margin="0" DockPanel.Dock="Left">

            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#171717">
				<StackPanel Width="300">

					<StackPanel.Resources>
						<Style TargetType="TextBlock">
							<Setter Property="TextAlignment" Value="Center"/>
							<Setter Property="FontFamily" Value="{DynamicResource MaterialDesignFont}"/>
							<Setter Property="FontSize" Value="20"/>
							<Setter Property="Margin" Value="0,50,0,10"/>
						</Style>
					</StackPanel.Resources>

					<materialDesign:ColorZone
                        Mode="Dark"
                        Padding="0,0,10,10"
                        CornerRadius="2"
                        Panel.ZIndex="1"
                        Margin="20"
                        Height="50"
                        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                        BorderThickness="1"
                       
                        materialDesign:ShadowAssist.ShadowDepth="Depth1">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="auto"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<Button
								Style="{DynamicResource MaterialDesignToolButton}"
								Margin="5,14,5,0"
								Height="auto">

								<materialDesign:PackIcon
									Kind="Search"
									Opacity=".56" />
							</Button>
							<TextBox
								Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
								VerticalAlignment="Top"
								AcceptsReturn="True"
								TextWrapping="Wrap"
								VerticalScrollBarVisibility="Auto"
								materialDesign:HintAssist.Hint="Rechercher"
								Cursor="IBeam"
                           
								Grid.Column="1"
                            />

						</Grid>
					</materialDesign:ColorZone>
					<GroupBox
                        Header="Tags"
                        Margin="16"
                        Height="215"
                        
                        
                        Style="{DynamicResource MaterialDesignCardGroupBox}"
                        materialDesign:ColorZoneAssist.Mode="PrimaryMid">

