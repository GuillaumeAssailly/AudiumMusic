                            <CheckBox Content="Blues (18)" Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox Content="Classique (43)" Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox Content="Bande Originale (180)" Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox Content="Hip-Hop (20)" Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox Content="Jazz (34)" Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox Content="Pop (3)" Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox Content="Rock (45)" Style="{StaticResource MaterialDesignCheckBox}" />
                            </StackPanel>
                    


                    </GroupBox>
                    
