                    <GroupBox
                        Header="Favoris"
                        Margin="16"
                        Background="white"
                        Style="{DynamicResource MaterialDesignCardGroupBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"
                        materialDesign:ColorZoneAssist.Background="#00b0ff"
                        materialDesign:ColorZoneAssist.Foreground="Black">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Height="auto" Width="auto" Margin="0,0,20,0"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="MaterialDesignIconButton">
                                    <materialDesign:PackIcon
                                    Kind="Play" />
                                </Button>
                                <TextBlock Style="{DynamicResource MaterialDesignCaptionTextBlock}">L'Hymne de l'URSS</TextBlock>
                            </StackPanel>
                            
                            
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border BorderBrush="Gray" BorderThickness="0" DockPanel.Dock="Top" Margin="-1,0">
            <Grid  Background="#c3e5fa" Height="100"
               >
                <Grid.Resources>
                    <Style TargetType="Ellipse">
                        <Setter Property="Height" Value="60"/>
                        <Setter Property="Width" Value="60"/>
                        <Setter Property="Margin" Value="8"/>
                    </Style>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="20"/>
                        <Setter Property="Width" Value="20"/>
                        <Setter Property="Margin" Value="5"/>
                    </Style>

                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="1*"/>
                    <ColumnDefinition  Width="1*"/>
                    <ColumnDefinition  Width="1*"/>
                    <ColumnDefinition  Width="8*"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <Button Height="70" Width="70"
                      Style="{StaticResource MaterialDesignIconButton}"
                      ToolTip="MaterialDesignIconButton" Cursor="Hand">
                                        <materialDesign:PackIcon Height="50" Width="50"
                        Kind="FolderMusic" />
                </Button>

                <Button Height="70" Width="70"
                      Grid.Column="1"
                      Style="{StaticResource MaterialDesignIconButton}"
                      ToolTip="MaterialDesignIconButton" Cursor="Hand">
                    <materialDesign:PackIcon Height="50" Width="50"
                        Kind="PlaylistAdd" />
                </Button>

                <Button Height="70" Width="70"
                      Grid.Column="2"
                      Style="{StaticResource MaterialDesignIconButton}"
                      ToolTip="MaterialDesignIconButton" Cursor="Hand">
                    <materialDesign:PackIcon Height="50" Width="50"
                        Kind="Cog" />
                </Button>

                <Button Height="70" Width="70"
                      Grid.Column="4"
                      Style="{StaticResource MaterialDesignIconButton}"
                      ToolTip="MaterialDesignIconButton" Cursor="Hand">
                    <materialDesign:PackIcon Height="50" Width="50"
                        Kind="Person" />
                </Button>
            </Grid>
        </Border>
        
        
        
        <Border BorderBrush="Gray" BorderThickness="0"  Margin="-1,0" DockPanel.Dock="Bottom">
            <Grid Background="#c3e5fa"  Height="150">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition />
                    <ColumnDefinition/>
                    <ColumnDefinition  Width="2*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Button
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="MaterialDesignIconButton"
                    Grid.Column="3"
                    Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                    <materialDesign:PackIcon Kind="Play" />
                </Button>
                <Button
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="MaterialDesignIconButton"
                    Grid.Column="2"
                    Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                    <materialDesign:PackIcon Kind="Rewind" />
                </Button>
                <Button
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="MaterialDesignIconButton"
                    Grid.Column="4"
                    Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                    <materialDesign:PackIcon Kind="FastForward" />
                </Button>
                
                <!--
                <ProgressBar Grid.Row="1" Grid.ColumnSpan="7" Height="6" Margin="40,10,40,34"
                             Style="{DynamicResource MaterialDesignLinearProgressBar}"  
                             Value="68"  Foreground="Black" Background="Gray" BorderBrush="#6FA8DC"></ProgressBar>
                -->
                <Slider
                    TickFrequency="50" Grid.Row="1" Grid.ColumnSpan="7" Margin="40,0,40,0" Height="40"
                    Orientation="Horizontal"
                    Minimum="1"
                    Maximum="50"
                    Value="25" />     
            </Grid>
        </Border>


        <Border BorderThickness="0" BorderBrush="Gray">
        <ScrollViewer Background="#fafafa" Style="{DynamicResource MaterialDesignScrollViewer}">
            <WrapPanel  HorizontalAlignment="Center">
                <WrapPanel.Resources>
                    <Style TargetType="materialDesign:Card">
                        <Setter Property="Height" Value="220"/>
                        <Setter Property="Width" Value="220"/>
                        <Setter Property="Margin" Value="20,20"/>
                        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth3"/>
                        
                    </Style>
                </WrapPanel.Resources>
                    <materialDesign:Card>
                        <Image Source="/img/hypnoflip.jpg"  />
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Image Source="/img/ram.jpg"  />
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Image Source="/img/beattles.jpg"  />
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Image Source="/img/allman.jpg"  />
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Image Source="/img/red.jpg"  />
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Image Source="/img/proleter.jpg"  />
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Image Source="/img/wagner.jpg"  />
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Image Source="/img/shosta.jpg"  />
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Image Source="/img/beethov.jpg"  />
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Image Source="/img/iam.jpg"  />
                    </materialDesign:Card>
                </WrapPanel>
        </ScrollViewer>
