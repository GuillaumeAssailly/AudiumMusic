<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
	<Window.Resources>
		<SolidColorBrush Color="Black" x:Key="DisqueBgColor"/>
		<Size Height="300" Width="300" x:Key="Taillepardefaut"/>
	</Window.Resources>

	<DockPanel>
		<Rectangle Fill="LightBlue" DockPanel.Dock="Left" Width="150"></Rectangle>
		<Grid DockPanel.Dock="Top">
			<Grid.RowDefinitions>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition  Width="1*"/>
				<ColumnDefinition  Width="1*"/>
				<ColumnDefinition  Width="1*"/>
				<ColumnDefinition  Width="3*"/>
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Button Content="Fichier" Height="50"></Button>
			<Button Content="Ajouter" Height="50" Grid.Column="1"></Button>
			<Button Content="Paramètres" Height="50" Grid.Column="2"></Button>
			<Button Content="Profil" Height="50" Grid.Column="4"></Button>
		</Grid>

		<Rectangle Fill="Gray" DockPanel.Dock="Bottom" Height="50"></Rectangle>
		<ScrollViewer VerticalScrollBarVisibility="Auto">
			<WrapPanel Background="Beige">
				<WrapPanel.Resources>
					<Style TargetType="Rectangle">
						<Setter Property="Height" Value="120"/>
						<Setter Property="Width" Value="120"/>
						<Setter Property="Margin" Value="20,20"/>
						<Setter Property="Fill" Value="Black"/>
					</Style>
				</WrapPanel.Resources>
				<Rectangle/>
				<Rectangle/>
				<Rectangle/>
				<Rectangle/>
				<Rectangle/>
				<Rectangle/>
				<Rectangle/>
				<Rectangle/>
			</WrapPanel>
		</ScrollViewer>
	</DockPanel>

</Window>
