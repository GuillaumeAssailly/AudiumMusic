<Window x:Class="Audium.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audium"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" MinWidth="520" >
    <Window.Resources>
        <SolidColorBrush Color="Black" x:Key="DisqueBgColor"/>
        <Size Height="300" Width="300" x:Key="Taillepardefaut"/>
    </Window.Resources>

    <DockPanel>
        <StackPanel Background="LightBlue" DockPanel.Dock="Left" Width="300">
            <materialDesign:Card Padding="32" Margin="16">
                <Button Style="{DynamicResource MaterialDesignFloatingActionLightButton}" Height="50" Width="50" Content="Clique" Cursor="Hand"/>
            </materialDesign:Card>
            


        </StackPanel>
        <Grid DockPanel.Dock="Top" Background="Gray" >
            <Grid.Resources>
                <Style TargetType="Ellipse">
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Width" Value="60"/>
                    <Setter Property="Margin" Value="8"/>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Margin" Value="5"/>
                </Style>
                    
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="1*"/>
                <ColumnDefinition  Width="1*"/>
                <ColumnDefinition  Width="1*"/>
                <ColumnDefinition  Width="3*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <Button Style="{DynamicResource MaterialDesignFloatingActionLightButton}" Height="80" Width="80" Margin="5,5"  Background="LightBlue" BorderBrush="LIghtBlue" Cursor="Hand">
                <Image Source="img/opened-folder.png" Height="70" Width="70"/>
            </Button>

            <Ellipse Fill="AliceBlue" Grid.Column="1"></Ellipse>
            <Ellipse Fill="AliceBlue" Grid.Column="2"></Ellipse>
            <Ellipse Fill="AliceBlue" Grid.Column="4"></Ellipse>
        </Grid>

        <Rectangle Fill="Gray" DockPanel.Dock="Bottom" Height="100"></Rectangle>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Beige">
            <WrapPanel  HorizontalAlignment="Center">
                <WrapPanel.Resources>
                    <Style TargetType="Rectangle">
                        <Setter Property="Height" Value="220"/>
                        <Setter Property="Width" Value="220"/>
                        <Setter Property="Margin" Value="20,20"/>
                        <Setter Property="Fill" Value="Black"/>
                    </Style>
                </WrapPanel.Resources>
                <Rectangle/>
                <Rectangle/>
                <Rectangle/>
                <Rectangle/>
                <Rectangle/>
                <Rectangle/>
                <Rectangle/>
                <Rectangle/>
            </WrapPanel>
        </ScrollViewer>
    </DockPanel>
</Window>