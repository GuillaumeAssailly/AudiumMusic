<Window x:Class="Audium.Parametres"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audium"
        mc:Ignorable="d"
        WindowStyle="None"
        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
        BorderThickness="3"
        AllowsTransparency="True"
        
      
        Title="Parametres" Height="450" Width="800"
        >

    <StackPanel Background="#424242" >
        <TextBlock Text="Paramètres" Style="{DynamicResource MaterialDesignHeadline5TextBlock}" Foreground="White" Margin="30,10"/>
        <TextBlock FontSize="15" Foreground="White" Text="Chemin de la base de données :" Margin="100,100,0,0"/>
        <TextBox Margin="100,0" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" FontSize="15" Foreground="White"/>
        <Button HorizontalAlignment="Right" Margin="30,160" Click="Save">Sauvegarder</Button>
    </StackPanel>
</Window>
